<% if !@site.nil?; @customer = @site.customer; end %>
	<h1>
		Users	
	<% if !@site.nil? %>
		of Site <%= link_to @site.name, @site %>
		<% if !@customer.nil? %>
			of Customer <%= link_to @customer.name, @customer %>
		<% end %>
	<% end %>	
	</h1>

<div>
<table>
  <thead>
    <tr>
<% if false %>
      <th>Name</th>
<% end %>
      <th>Extension</th>
      	<% if @customer.nil? %>
      <th>Customer</th>
      	<% end %>
      	<% if @site.nil? %>
      <th>Site</th>
      	<% end %>
      <th>Givenname</th>
      <th>Familyname</th>
      	<% if false %>
      <th>Email</th>
      	<% end %>
      <th>Status</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
	<% if false %>
        <td><%= link_to user.name, user %></td>
	<% end %>
        <td><%= link_to user.extension, user_path(user) %></td>
        
        	<% if @customer.nil? %>
        <td>	
        	<% if !user.site.nil? && !user.site.customer.nil? %>			
        	<%= link_to user.site.customer.name, user.site.customer %>
        	<% end %>
        </td>
        	<% end %>     	               
        
        	<% if @site.nil? %>
        <td>
        	<% if user.site.nil? %>
        	<%= link_to user.site, user.site %>
        	<% else %>
        	<%= link_to user.site.name, user.site %>
        	<% end %>
        </td>
        	<% end %>      	
        
        
        <td><%= user.givenname %></td>
        <td><%= user.familyname %></td>
        	<% if false %>
        <td><%= user.email %></td>
        	<% end %>
        <td><% user.status %>
          <% case user.status
               when /success/
                 statuscolor = "#008800"  # dark green
               when /failure/
                 statuscolor = "red"
               when /progress/
                 statuscolor = "orange"
               else
                 statuscolor = "black"
             end
          %>

          <%= link_to user.status, site_provisionings_path(user.site), {:style => "color: #{statuscolor}"}%>
        </td>
                        <% if ENV["WEBPORTAL_PROVISIONINGOBJECTS_EDIT_VISIBLE"] == "true" %>
	<td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-default" %></td>
			<% end %>
			<% if ENV["WEBPORTAL_PROVISIONINGBUTTON_VISIBLE"] == "true" %>
        <td><%= link_to 'Provision', provision_user_path(user), method: :patch, class: "btn btn-default", data: { confirm: 'Are you sure?' } %></td>
			<% end %>
<%  @provisioningobject = user; %>
        <td><%= render 'shared/edit_button.html.erb' %></td>
<% if ENV["WEBPORTAL_SYNCHRONIZEBUTTON_VISIBLE"] == "true" %>
        <td><%= link_to 'Synchronize', synchronize_user_path(user), method: :patch, class: "btn btn-default", data: { confirm: 'Are you sure?' } %></td>
<% end %>
        <td><%= render 'shared/provision_button.html.erb' %></td>
        <td><%= render 'shared/destroy_button.html.erb' %></td>

      </tr>
    <% end %>
  </tbody>
</table>



</div>
