<% 
def myObject(obj="Customer")
  #"Customer"
  obj
end

def myobject(obj=myObject)
  # customer
  myObject(obj).downcase
end

def provisioningobject_path(thisobject, prefix='')
  # returns e.g. customer_path

  # does not work correctly in the specs on the /dev/ space:
  #path = thisobject.path(prefix)

  # works:
  prefixPrepend = "#{prefix}_" unless prefix == '' 
  path = send("#{prefixPrepend}#{myobject(thisobject.class.to_s)}_path", thisobject.id)

end
