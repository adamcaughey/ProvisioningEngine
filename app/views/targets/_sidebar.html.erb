<% myclass = request.original_url.gsub(/http.*\/(customers|sites|users|provisionings|targets)(\/[a-z]*){0,1}(\/[1-9][0-9]*){0,1}$/, '\1')
    
%>
<% case request.original_url %>
<%     when /#{myclass}$|#{myclass}\/$|#{myclass}\/\#$|#{myclass}\/index.html$/ %> 
                <li class="sidebar-brand">
                    <a href="#">
                        Functions
                    </a>
                </li>
                <li><%= link_to 'New Target', new_target_path %></li>

<%     when /#{myclass}\/[1-9][0-9]*$/ %>
                <li class="sidebar-brand">
                    <a href="#">
                        Create
                    </a>
                </li>
                <li><%= link_to 'New Target', new_target_path %></li>
                <li class="sidebar-brand">
                    <a href="#">
                        Change/Delete
                    </a>
                </li>
                <li><%= link_to 'Edit Target', edit_target_path(@target) %></li>
                <% if ENV["WEBPORTAL_PROVISIONINGBUTTON_VISIBLE"] == "true" %>
                <li><%= link_to 'Provision', provision_site_path(@site), method: :patch, data: { confirm: 'Are you sure?' } %></li>
                <% end %>
                <% if ENV["WEBPORTAL_SYNCHRONIZEBUTTON_VISIBLE"] == "true" %>
                <li><%= link_to 'Synchronize', synchronize_site_path(@site), method: :patch, data: { confirm: 'Are you sure?' } %></li>
                <% end %>
                <li><%= link_to 'Delete Target', @target, method: :delete, data: { confirm: 'Are you sure?' } %></li>
                <li class="sidebar-brand">
                    <a href="#">
                        Show related...
                    </a>
                </li>
                <li><%= link_to 'Customers (not yet filtered)', customers_path %></li>


<% end %>     
