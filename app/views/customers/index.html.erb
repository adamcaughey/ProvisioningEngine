<h1>Customers</h1>

<div>
	
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Target</th>
      <th>Status</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>

    <% @customers.each do |customer| %>
      <tr>
      	<% begin %>
      	<% @target = Target.find(customer.target_id) %>
      	<% rescue %>
      	<% end %>
        <td><%= customer.id %></td>
        <td><%= link_to customer.name, customer %></td>
        <td>
		<% begin %>
        <%= link_to @target.name, @target %>
		<% rescue %>
      	<% end %>
        </td>
        <td>
          <% case customer.status
               when /success/  
                 statuscolor = "#008800"  # dark green
               when /failure/
                 statuscolor = "red"
               when /progress/
                 statuscolor = "orange"
               else
                 statuscolor = "black"
             end
          %>
   
          <%= link_to customer.status, customer_provisionings_path(customer), {:style => "color: #{statuscolor}"}%>
       </td>

      <% if true %>
                        <% if ENV["WEBPORTAL_PROVISIONINGOBJECTS_EDIT_VISIBLE"] == "true" %>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td> 
			<% end %>
        <td><%= link_to 'Destroy', customer, method: :delete, class: "btn btn-default", data: { confirm: 'Are you sure?' } %></td>
      <% else %>
        <td></td>
        <td></td>
        <td></td>
      <% end %>
        <% if false %>
        <td><%= link_to "Provision to OSV", provisionings_path(customer), :confirm => 'Are you sure?', :action => :deliver, :method => :post %></td>
        <% end %>
      </tr>
    <% end %>
    <% if true %>
  </tbody>
  <% end %>
</table>
</div>

