<h2>Customer <%= @customer.name %></h2>


<div>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Customer</th>
      <th>Target/Site</th>
<% if false %>
      <th>Language</th>
<% end %>
      <th>Status</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
      <tr>
        <td><%= @customer.id %></td>
        <td><%= @customer.name %></td>
        <td>
        	<% begin %>
        	<%= Target.find(@customer.target_id).name %>
        	<% rescue %>
        	[id] <%= @customer.target_id %>
        	<% end %>
        </td>
<% if false %>
        <td><%= @customer.language %></td>
<% end %>
        <td>
	   <span id="<%= "status" %>">
          <% case @customer.status
               when /success/
                 statuscolor = "#008800"  # dark green
               when /failure/
                 statuscolor = "red"
               when /progress/
                 statuscolor = "orange"
               else
                 statuscolor = "black"
             end
          %>

          <%= link_to @customer.status, customer_provisionings_path(@customer), {:style => "color: #{statuscolor}"}%>
           </span>
        </td>
                        <% if ENV["WEBPORTAL_PROVISIONINGOBJECTS_EDIT_VISIBLE"] == "true" %>
        <td class="actions"><%= link_to 'Edit', edit_customer_path(@customer) %></td>
			<% end %>
			<% if ENV["WEBPORTAL_PROVISIONINGBUTTON_VISIBLE"] == "true" %>
        <td class="actions"><%= link_to 'Provision', provision_customer_path(@customer), method: :patch, data: { confirm: 'Are you sure?' } %></td>
			<% end %>
			<% if ENV["WEBPORTAL_SYNCHRONIZEBUTTON_VISIBLE"] == "true" %>
        <td></td>
			<% end %>
        <td class="actions"><%= link_to 'Destroy', @customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <%= render @customer.sites %>
  </tbody>
</table>
</div>



<br>


